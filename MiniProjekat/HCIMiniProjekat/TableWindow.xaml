<Window x:Class="HCIMiniProjekat.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCIMiniProjekat"
        mc:Ignorable="d"
        Title="Tabelar data views" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataTable">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Turquoise"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                    <Setter Property="BorderBrush" Value="Black"></Setter>
                    <Setter Property="BorderThickness" Value="0, 0, 1, 2"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding date}"></DataGridTextColumn>
                <DataGridTextColumn Header="Value" Width="*" Binding="{Binding value}"></DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</Window>
